{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES6", 
    "outDir": "./dist",
    "rootDir": "./src", 
    "strict": true, 
    "typeRoots": ["./node_modules/@types", "./@types"],
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
